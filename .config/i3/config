# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"


# new layer of keybinding for conviniont lauch of programs
mode "launcher" {
  # todo
  bindsym $mod+p exec superproductivity
  # viber
  bindsym $mod+v exec "/home/vegapunk/repo/scripts/viber.sh"
  #mail?
  bindsym $mod+t exec thunderbird
  
  bindsym $mod+d exec discord

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+l mode "default"
}

bindsym $mod+l mode "launcher"

# shutdown,reboot,lock
mode "srl" {
  bindsym $mod+s exec systemctl poweroff
  bindsym $mod+r exec systemctl reboot
  bindsym $mod+l exec betterlockscreen -l blur

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+e mode "default"
}
bindsym $mod+e mode "srl"

mode "i3" {
    # reload the configuration file
    bindsym $mod+c reload
    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym $mod+r restart
    # exit i3 (logs you out of your X session)
    bindsym $mod+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
    # lock
    bindsym $mod+l exec betterlockscreen -l blur

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+i mode "default"

}
bindsym $mod+i mode "i3"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        mode dock
        tray_output DisplayPort-2
}

